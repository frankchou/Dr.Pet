// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          String   @id @default(cuid())
  nickname    String   @unique
  createdAt   DateTime @default(now())
  pets        Pet[]
}

model Pet {
  id             String         @id @default(cuid())
  name           String
  species        String
  breed          String?
  sex            String
  birthday       DateTime?
  weight         Float?
  isNeutered     Boolean        @default(false)
  allergies      String?
  medicalHistory String?
  mainProblems   String         @default("[]")
  avatar         String?
  userId         String?
  user           User?          @relation(fields: [userId], references: [id])
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  symptoms       SymptomEntry[]
  productUsages  ProductUsage[]
  documents      Document[]
  insights       AIInsight[]
  chatMessages   ChatMessage[]
  weeklyTasks          WeeklyTask[]
  nutritionAnalyses    NutritionAnalysis[]
  productRecommendationResults ProductRecommendationResult[]
  instantAnalyses      InstantAnalysis[]
  petProducts          PetProduct[]
  productReactions     ProductReaction[]
  communityRecs        CommunityRec[]
}

model SymptomEntry {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  symptomType String
  severity    Int
  side        String?
  notes       String?
  photos      String   @default("[]")
  createdAt   DateTime @default(now())
}

model Product {
  id             String         @id @default(cuid())
  type           String
  name           String
  brand          String?
  variant        String?
  ingredientText String?
  ingredientJson String?
  photos         String         @default("[]")
  createdAt      DateTime       @default(now())
  usages         ProductUsage[]
  petProducts    PetProduct[]
  reactions      ProductReaction[]
  communityRecsFor   CommunityRec[] @relation("BadProduct")
  communityRecsRec   CommunityRec[] @relation("RecommendedProduct")
}

model ProductUsage {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  date        DateTime @default(now())
  frequency   String?
  amountLevel String?
  notes       String?
  createdAt   DateTime @default(now())
}

// Pet's managed product list (固定清單 / 試用清單)
model PetProduct {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  listType    String   // "fixed" | "trial"
  trialReason String?  // only for listType="trial"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Daily reaction record per product
model ProductReaction {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  date        String   // "YYYY-MM-DD"
  rating      String   // "good" | "ok" | "bad"
  notes       String?
  sharedAt    DateTime? // non-null = shared to community pool
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([petId, productId, date])
}

// Community recommendation cards shown to users
model CommunityRec {
  id                   String   @id @default(cuid())
  forPetId             String
  forPet               Pet      @relation(fields: [forPetId], references: [id], onDelete: Cascade)
  badProductId         String
  badProduct           Product  @relation("BadProduct", fields: [badProductId], references: [id])
  recommendedProductId String
  recommendedProduct   Product  @relation("RecommendedProduct", fields: [recommendedProductId], references: [id])
  symptomTypes         String   @default("[]") // JSON array of symptom types
  basedOnCount         Int      @default(0)    // number of similar-pet good reactions
  fromAI               Boolean  @default(false)
  aiRationale          String?
  dismissed            Boolean  @default(false)
  createdAt            DateTime @default(now())
}

model Document {
  id                  String   @id @default(cuid())
  petId               String
  pet                 Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  type                String
  photos              String   @default("[]")
  extractedText       String?
  extractedStructured String?
  createdAt           DateTime @default(now())
}

model AIInsight {
  id                 String   @id @default(cuid())
  petId              String
  pet                Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  symptomType        String?
  suspectedTriggers  String   @default("[]")
  helpfulFactors     String   @default("[]")
  confidence         String   @default("low")
  rationale          String?
  recommendedActions String   @default("[]")
  createdAt          DateTime @default(now())
}

model ChatMessage {
  id        String   @id @default(cuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  role      String
  content   String
  createdAt DateTime @default(now())
}

model WeeklyTask {
  id          String    @id @default(cuid())
  petId       String
  pet         Pet       @relation(fields: [petId], references: [id], onDelete: Cascade)
  title       String
  description String?
  completed   Boolean   @default(false)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
}

model NutritionAnalysis {
  id           String   @id @default(cuid())
  petId        String
  pet          Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  resultJson   String
  productCount Int
  createdAt    DateTime @default(now())
}

model ProductRecommendationResult {
  id         String   @id @default(cuid())
  petId      String
  pet        Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  resultJson String   // JSON array of ProductRec[]
  createdAt  DateTime @default(now())
}

model InstantAnalysis {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  verdict     String   // 'safe' | 'caution' | 'danger'
  summary     String
  resultJson  String   // full JSON with concerns, positives, ingredients
  imagePath   String?  // saved image path in /public/uploads/
  createdAt   DateTime @default(now())
}
